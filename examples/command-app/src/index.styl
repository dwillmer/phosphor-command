body {
  margin: 0;
  padding: 0;
  background: #F5F6F7;
}


#main {
  position: absolute;
  overflow: hidden;
  top: 30px;
  left: 10px;
  right: 10px;
  bottom: 10px;
}


.CodeMirrorTab > .CodeMirror {
  z-index: 0;
}


#container {
  width: 100%;
}


#content {
  padding-left: 10px;
}


.p-MenuBar {
  position: static;
  top: auto;
  left: auto;
  width: auto;
  height: auto;
  min-height: 24px;
  padding-left: 5px;
  background: #FAFAFA;
  color: rgba(0, 0, 0, 0.87);
  border-bottom: 1px solid #DDDDDD;
  font: 13px Helvetica, Arial, sans-serif;
}


.p-MenuBar-item {
  padding: 4px 8px;
  border-left: 1px solid transparent;
  border-right: 1px solid transparent;
  &.p-mod-active {
    background: #E5E5E5;
  }
  &.p-mod-disabled {
    color: rgba(0, 0, 0, 0.26);
  }
  &.p-mod-active.p-mod-selected {
    z-index: 1000000;
    background: white;
    border-left: 1px solid #C0C0C0;
    border-right: 1px solid #C0C0C0;
    box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.2);
  }
  &.p-mod-separator-type {
    border-left: 1px solid #DDDDDD;
  }
}


.p-MenuBar-menu {
  transform: translateY(-1px);
}


.p-Menu {
  background: white;
  color: rgba(0, 0, 0, 0.87);
  border: 1px solid #C0C0C0;
  font: 12px Helvetica, Arial, sans-serif;
  box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.2);
}


.p-Menu-item {
  &.p-mod-active {
    background: #E5E5E5;
  }
  &.p-mod-disabled {
    color: rgba(0, 0, 0, 0.26);
  }
  &.p-mod-separator-type > span::after {
    border-top: 1px solid #DDDDDD;
  }
}


.p-Menu-item-icon::before,
.p-Menu-item-submenu-icon::before {
  font-family: FontAwesome;
}


.p-Menu-item.p-mod-check-type.p-mod-checked > .p-Menu-item-icon::before {
  content: '\f00c';
}


.p-Menu-item.p-mod-has-submenu > .p-Menu-item-submenu-icon::before {
  content: '\f0da';
}


.p-Menu-item.copy > .p-Menu-item-icon::before {
  content: '\f0c5';
}


.p-Menu-item.cut > .p-Menu-item-icon::before {
  content: '\f0c4';
}


.p-Menu-item.paste > .p-Menu-item-icon::before {
  content: '\f0ea';
}


.p-Menu-item.close > .p-Menu-item-icon::before {
  content: '\f00d';
}


.p-Menu-item.undo > .p-Menu-item-icon::before {
  content: '\f0e2';
}


.p-Menu-item.repeat > .p-Menu-item-icon::before {
  content: '\f01e';
}


.p-DockPanel {
  padding-right: 2px;
  padding-bottom: 2px;
}


.p-TabBar {
  min-height: 24px;
}


.p-TabBar-content {
  bottom: 1px;
  > .p-Tab {
    font: 12px Helvetica, Arial, sans-serif;
    height: 21px;
    padding: 0px 10px;
    background: #E5E5E5;
    border: 1px solid #C0C0C0;
    border-bottom: none;
    &.p-mod-selected {
      height: 24px;
      background: white;
      transform: translateY(1px);
    }
    &:hover:not(.p-mod-selected) {
      background: #F0F0F0;
    }
    > span {
      line-height: 21px;
    }
  }
}


.p-TabBar-footer {
  display: block;
  height: 1px;
  background: #C0C0C0;
}


.p-Tab.p-mod-floating {
  font: 12px Helvetica, Arial, sans-serif;
  height: 24px;
  padding: 0px 10px;
  background: white;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  > span {
    line-height: 21px;
  }
}


.p-Tab.p-mod-closable > .p-Tab-close-icon {
  margin-left: 4px;
  &:before {
    content: '\f00d';
    font-family: FontAwesome;
  }
}


.p-DockPanel > .p-StackedPanel {
  padding: 10px;
  background: white;
  border: 1px solid #C0C0C0;
  border-top: none;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
}


.p-DockPanel-overlay {
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid rgba(0, 0, 0, 0.6);
}


.content {
  border: 1px solid black;
  min-width: 50px;
  min-height: 50px;
}
